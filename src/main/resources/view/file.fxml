<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.rdfs.controller.FileController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <VBox>
                     <children>
                        <Label text="File name:" />
                        <Label fx:id="nameLabel" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="File status:" />
                        <Label fx:id="statusLabel" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </left>
         <right>
            <HBox alignment="CENTER" BorderPane.alignment="BOTTOM_RIGHT">
               <children>
                  <Button fx:id="downloadButton" mnemonicParsing="false" text="Download" />
                  <Button mnemonicParsing="false" text="Delete" />
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
